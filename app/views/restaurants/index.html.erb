<div class="container">
  <h1>List of restaurants</h1>
  <% @restaurants.each do |restaurant| %>
    <li><%= restaurant.name %> - <%= restaurant.category %> - <%= restaurant.address %> - <%= restaurant.phone_number %></li>
    <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary" %>
  <% end %>
  <br>
  <br>
  <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>
